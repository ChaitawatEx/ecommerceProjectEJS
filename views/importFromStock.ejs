<%- include('header') %> 
<form method="post">
<div class="container mt-4">
    <div  class="box3">
        <div class="h5"> รับสินค้าเข้าสต็อก</div>
   <div class="box2">
        <div>
        <label>สินค้า</label>
        <input type="text" class="form-control" name="product_barcode">
        </div>
        <div class="mt-3">
        <label>จำนวน</label>
        <input type="text" class="form-control" name="qty">
        </div>
        <div class="mt-3">
            <label>หมายเหตุ</label>
            <textarea class="form-control" name="remark"> </textarea>
       </div>
       <div class="text-center">
       <button type="submit" class="btn btn-outline-primary mt-3">บันทึกข้อมูล</button>
    </div>
</div>

<table class="table table-bordered mt-3">
   <thead>
        <tr>
            <th>บาร์โค้ด</th>
            <th>รายการสินค้า</th>
            <th>จำนวน</th>
            <th>วันที่รับเข้า</th>
            <th width="200px"></th>
        </tr>
   </thead>
   <tbody>
    <% stockIn.forEach(item =>{%>
        <tr>
            <td><%= item.barcode %></td>
            <td><%= item.name %></td>
            <td><%= item.qty %></td>
            <td><%= dayjs(item.created_date).format(dayFormat) %></td>
            <td><a href="/deleteStock/<%= item.id%> " class="btn btn-danger" onclick="return confirm('Are you sure')">
                <span class="material-symbols-outlined material-icon">
                    delete
                    </span>
            </a></td>
        </tr>
        <%}) %> 
   </tbody>
</table>
</div>
</div>
</form>
<%- include('footer') %>