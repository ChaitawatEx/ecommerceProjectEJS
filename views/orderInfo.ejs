<%- include('header') %> 
<div class="mt-3 container">
    <div class="h4">รายการสั่งซื้อจากลูกค้า</div>
    <table class="mt-3 table table-bordered table-stripted">
        <thead class="text-center">
            <tr>
                <th>ภาพสินค้า</th>
                <th>บาร์โค๊ต</th>
                <th>รายการสินค้า</th>
                <th>ราคา</th>
                <th>จำนวน</th>
                <th>ยอดรวม</th>
            </tr>
        </thead>
        <tbody class="text-center">
            <% orderDetails.forEach(orderDetail=>{%> 
            <tr>
                <td><img src="/images/<%= orderDetail.img %> " width="100px" height="100px"></td>
                <td><%= orderDetail.barcode %> </td>
                <td><%= orderDetail.name %> </td>
                <td><%= numeral(orderDetail.price).format() %></td>
                <td><%= numeral(orderDetail.qty).format() %></td>
                <td><%= numeral(orderDetail.price * orderDetail.qty).format()%></td>
            </tr>
            <%}) %> 
        </tbody>
      </table>
      <div class="alert alert-success mt-3 h4 text-center"> จำนวนรวม <%= totalQty %> ชิ้น คิดเป็นเงิน <%= numeral(totalPrice).format() %> บาท</div>
</div>

<%- include('footer') %> 