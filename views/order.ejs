<%- include('header') %> 
<div class="box">
<div class="card5">
<div class="h4 text-center mt-5"> ยอดสั่งซื้อ </div>

<table class="table table-bordered mt-3">
<thead>
    <tr>
        <th width="300px"> 
        </th>
        <th >รหัสบิล</th>
        <th >ชื่อ</th>
        <th>ที่อยู่</th>
        <th >เบอร์โทรศัพท์</th>
        <th >วันที่ชำระเงิน</th> 
        <th >วันที่จัดส่ง</th>
        <th >เลขติดตามพัสดุ</th> 
    </tr>
</thead>
        <tbody>
            <% orders.forEach(order =>{%>
            <tr>
                <td>
                    <a class="btn btn-info " href="/payOrder/<%= order.id %>">
                        ชำระเงิน
                    </a>
                    </a>
                    <a class="btn btn-primary" href="/sendOrder/<%= order.id %>">
                        จัดส่งสินค้า
                    </a>
                    <a class="btn btn-danger " href="/deleteOrder/<%= order.id %>">
                        ยกเลิก
                    </a>
                </td>
                <td><a href="/orderInfo/<%= order.id %>"><%= order.id %></a> </td>
                <td><%= order.name %> </td>
                <td><%= order.address %> </td>
                <td><%= order.phone %> </td>
                <td><%= dayjs(order.pay_date).format(dayFormat) %> </td>
                <td><%= dayjs(order.send_date).format(dayFormat) %> </td>
                <td><%= order.track_code %> </td>
                
            </tr>
            <%}) %> 
        </tbody>
    </table>
</div>
</div>


<%- include('footer') %> 