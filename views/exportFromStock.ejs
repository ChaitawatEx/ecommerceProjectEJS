<%- include('header') %> 
<form method="post">
    <div class="container mt-4">
        <div  class="box3">
            <div class="h5">เบิกสินค้าออกจากสต็อก</div>
       <div class="box2">
            <div>
            <label>บาร์โค้ดสินค้า</label>
            <input type="text" class="form-control" name="product_barcode">
            </div>
            <div class="mt-3">
            <label>จำนวน</label>
            <input type="text" class="form-control" name="qty" value="1">
            </div>
            <div class="mt-3">
                <label>หมายเหตุ</label>
                <textarea class="form-control" name="remark"> </textarea>
           </div>
           <div class="text-center">
           <button type="submit" class="btn btn-outline-primary mt-3">บันทึกข้อมูล</button>
        </div>
    </div> 
    <table class="table table-bordered mt-3">
       <thead>
            <tr>
                <th>barcode</th>
                <th>รายการสินค้า</th>
                <th>จำนวน</th>
                <th>วันที่นำออก</th>
                <th width="100px"></th>
            </tr>
       </thead>
       <tbody>
        <% stockOut.forEach(stockOuts =>{%>
         <tr>
            <td><%= stockOuts.barcode %> </td>
            <td><%= stockOuts.name %> </td>
            <td><%= stockOuts.qty %> </td>
            <td><%= dayjs(stockOuts.created_date).format(dayFormat) %> </td>
            <td><a class="btn btn-danger" href="/deleteExportStock/<%= stockOuts.id %> " onclick="return confirm('Are you sure')">
                <span class="material-symbols-outlined material-icon">
                    delete
                    </span>
            </a></td>
         </tr>
         <%}) %>  
       </tbody>
    </table>
    </div>
    </div>
    </form>
<%- include('footer') %>