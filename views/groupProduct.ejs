<%- include('header') %> 
    <div class= "container mt-3">
       
            <h4>ประเภทสินค้า</h4>
            <div class="mt-3">
                <a class="btn btn-info" href="/addGroupProduct"><span class="material-symbols-outlined material-icon">
                    add
                    </span>เพิ่มรายการ</a>
            </div>
            <table class="table table-bordered mt-4">
                <thead>
                    <tr>
                        <th width = 150px>id</th>
                        <th>typename</th>
                        <th width = 150px>manage</th>
                    </tr>
                </thead>
                <tbody>
                    <% groupProducts.forEach(groupProduct => { %>
                    <tr>
                        <td><%= groupProduct.id %> </td>
                        <td><%= groupProduct.name%></td>
                        <td>
                            <a class="btn btn-primary" href="/editGroupProduct/<%= groupProduct.id %> ">
                                <span class="material-symbols-outlined material-icon">
                                    edit
                                    </span> 
                            </a>
                            <a class="btn btn-danger" href="/deleteGroupProduct/<%= groupProduct.id %>" onclick="return confirm('Are you sure')" >
                                <span class="material-symbols-outlined material-icon">
                                    delete
                                    </span> 
                            </a>

                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
      

<%- include('footer') %> 