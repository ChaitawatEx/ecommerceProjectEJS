<%- include('header') %> 
<form method="post" >
    
<div class="box">
    <div class="card2">
    <div class="card-title" style="font-size: 25px;">เพิ่มผู้ใช้งานระบบ</div>
    <div class="mt-3">
        <label>ชื่อ</label>
        <input type="text" name="name" class="form-control p-4" value="<%= user.name %>"/>
    </div>
    <div class="mt-3">
        <label>username</label>
        <input type="text" name="user" class="form-control p-4"  value="<%= user.user %>"/>
    </div>
   
    <div class="mt-3">
        <label>password</label>
        <input type="password" name="pass" class="form-control p-4 "  value="<%= user.pass %>"/>
    </div>
    
    <div class="mt-3">
        <label>ระดับ</label>
        <div>
             
            <input  type="radio"  name="level"  value="user" <% if (user.level ===  'user') {%>checked<%} %>> user
          
            <input  type="radio" name="level"  value="admin"  <% if (user.level ===  'admin'){%>checked<%} %>> admin
        </div>  
          
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-outline-success"> บันทึกข้อมูล</button>
    </div>

</div>
</div>

</form>
<%- include('footer') %> 