<%- include('header') %> 
<form method="post" enctype="multipart/form-data">
<div class="box">
    <div class="card2">
        <h4>เพิ่มข้อมูลสินค้า</h4>
        <div class="mt-3">
            <label>ประเภทสินค้า</label>
            <select name="group_product_id" class="form-control">
                <% groupProducts.forEach(groupProduct=>{%> 
                    <option value="<%= groupProduct.id %>" 
                        <% if (product.group_product_id == groupProduct.id) {%>
                            selected
                            <%} %> 
                            >
                        <%= groupProduct.name %> 
                    </option>
                    <%}) %> 
            </select>
        </div>
        <div class="mt-3">
            <label>Barcode</label>
            <input type="text" name="barcode" class="form-control" value="<%= product.barcode %>">
        </div>
        <div class="mt-3">
            <label>ชื่อ</label>
            <input type="text" name="name" class="form-control" value="<%= product.name %>">
        </div>
        <div class="mt-3">
            <label>ราคาทุน</label>
            <input type="text" name="cost"  class="form-control" value="<%= product.cost %>">
        </div>
        <div class="mt-3">
            <label>ราคาจำหน่าย</label>
            <input type="text" name="price"  class="form-control" value="<%= product.price %>">
        </div>
        <div class="mt-3 ">
            <label>รูปภาพ</label>
            <% if(product.img != undefined) {%>
            <div><img src="/images/<%= product.img %> "  width="150px" /></div>
            <%} %> 
    
            <input type="file" name="img"  accept="image/*" class="form-control mt-3">
        </div>
        <div class="mt-3 text-center">
            <button type="submit" class="btn btn-info"><span class="material-symbols-outlined material-icon">
                save
                </span> บันทึก</button>
        </div>
    </div>
</div>
</form>
<%- include('footer') %> 