<%- include('header') %> 
<form method="post" action="/changeProfile/<%= user.id %> ">

 <div class="box">
    <div class="card1">
    <div class="card-title" style="font-size: 25px;">แก้ไขข้อมูล</div>
    <div class="mt-3">
        <label>ชื่อ</label>
        <input type="text" name="name" class="form-control p-4" value="<%= user.name %>"/>
    </div>
    <div class="mt-3">
        <label>username</label>
        <input type="text" name="user" class="form-control p-4" value="<%= user.user %>"/>
    </div>
   
    <div class="mt-3">
        <label>password</label>
        <input type="password" name="pass" class="form-control p-4 " value="<%= user.pass %>" />
    </div
  
      

    <div class="">
        <label class="text-danger">*** หากไม่ป้อนจะยึดตามรหัสเดิม</label>
        <button type="submit"  class="btn btn-info  mt-3"><span class="material-symbols-outlined material-icon">
            save 
            </span> Save</button>
            <% if (session.message != undefined) {%>   
                <div class="alert alert-success mt-2">
                 <%= session.message %>
                    
                 <% session.message = undefined %>  
                </div>
                 <% }  %> 
    </div>  
 </div>
</div>
</div>
</form>
